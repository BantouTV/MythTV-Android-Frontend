<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" >
    
	<ImageButton
	       android:id="@+id/imageButton_vol_up"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:src="@drawable/mythmote_btn_vol_up"
	       android:layout_weight="33" />
	
	   <ImageButton
	       android:id="@+id/imageButton_vol_mute"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:src="@drawable/mythmote_btn_vol_mute"
	       android:layout_weight="33" />
	   
	   <ImageButton
	       android:id="@+id/imageButton_vol_down"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:src="@drawable/mythmote_btn_vol_down"
	       android:layout_weight="33" />
	    
</LinearLayout>