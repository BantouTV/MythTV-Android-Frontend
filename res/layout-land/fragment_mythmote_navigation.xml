<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">
    
    <TableRow
        android:layout_weight="20"
        android:weightSum="100" >

        <ImageButton
            android:id="@+id/imageButton_ch_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:src="@drawable/mythmote_btn_ch_up" />
    
	     <ImageButton
	         android:id="@+id/imageButton_nav_info"
	         android:layout_width="match_parent"
	         android:layout_height="match_parent"
	         android:layout_weight="20"
	         android:src="@drawable/mythmote_btn_nav_info" />
	
	    <ImageButton
	        android:id="@+id/imageButton_nav_up"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_nav_up"
	        android:layout_weight="20" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_nav_tvguide"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_nav_guide"
	        android:layout_weight="20" />

	    <ImageButton
	        android:id="@+id/imageButton_vol_up"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="20"
	        android:src="@drawable/mythmote_btn_vol_up" />
    
    </TableRow>
    
    
    <TableRow android:layout_weight="20"
        android:weightSum="100">

        <ImageButton
            android:id="@+id/imageButton_ch_last"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:src="@drawable/mythmote_btn_ch_last" />
    
	     <ImageButton
	        android:id="@+id/imageButton_nav_left"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_nav_left"
	        android:layout_weight="20" />
	
	    <ImageButton
	        android:id="@+id/imageButton_nav_select"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_nav_select"
	        android:layout_weight="20" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_nav_right"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_nav_right"
	        android:layout_weight="20" />

	    <ImageButton
	        android:id="@+id/imageButton_vol_mute"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="20"
	        android:src="@drawable/mythmote_btn_vol_mute" />
    
    </TableRow>
    
    <TableRow android:layout_weight="20"
        android:weightSum="100">

        <ImageButton
            android:id="@+id/imageButton_ch_down"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:src="@drawable/mythmote_btn_ch_down" />
    
	     <ImageButton
	        android:id="@+id/imageButton_nav_cancel"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_nav_cancel"
	        android:layout_weight="20" />
	
	    <ImageButton
	        android:id="@+id/imageButton_nav_down"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_nav_down"
	        android:layout_weight="20" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_nav_menu"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_nav_menu"
	        android:layout_weight="20" />

	    <ImageButton
	        android:id="@+id/imageButton_vol_down"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="20"
	        android:src="@drawable/mythmote_btn_vol_down" />
    
    </TableRow>
    
    <TableRow android:layout_weight="20"
        android:weightSum="100">
    
	     <ImageButton
	        android:id="@+id/imageButton_mediactrl_rec"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_media_rec"
	        android:layout_weight="25" />
	
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_stop"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_media_stop"
	        android:layout_weight="25" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_pause"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_media_pause"
	        android:layout_weight="25" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_play"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_media_play"
	        android:layout_weight="25" />
    
    </TableRow>
    
    
    <TableRow android:layout_weight="20"
        android:weightSum="100">
    
	     <ImageButton
	        android:id="@+id/imageButton_mediactrl_prev"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_media_prev"
	        android:layout_weight="25" />
	
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_rew"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_media_rew"
	        android:layout_weight="25" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_ff"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_media_ff"
	        android:layout_weight="25" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_next"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/mythmote_btn_media_next"
	        android:layout_weight="25" />
    
    </TableRow>
    
    
    
</TableLayout>