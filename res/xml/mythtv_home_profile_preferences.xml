<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/preference_home_profiles_modify"
        android:summary="@string/preference_home_profiles_modify_summary">
        
       	<Preference 
	        android:key="preference_home_profiles_default_id"
        	android:title="@string/preference_home_profiles_default"
        	android:defaultValue="@string/preferences_unset" />
        
    </PreferenceCategory>
    
    <PreferenceCategory
        android:title="@string/preference_home_profiles_add"
        android:summary="@string/preference_home_profiles_add_summary">
    
    	<Preference
    		android:key="preference_home_profiles_add"
    		android:title="@string/preference_home_profiles_add"
    		android:summary="@string/preference_home_profiles_add_summary">
        
		</Preference>
    	    
    	<Preference
    		android:key="preference_home_profiles_scan"
    		android:title="@string/preference_home_profiles_scan"
    		android:summary="@string/preference_home_profiles_scan_summary">
        
		</Preference>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="preference_home_profiles_saved"
        android:title="@string/preference_home_profiles_saved">
    </PreferenceCategory>
    	
</PreferenceScreen>