<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView_episode_coverart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/blank" />

    <TextView
        android:id="@+id/textView_episode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/textView_episode_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sub-Title" />
    
    <TextView
        android:id="@+id/textView_episode_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description" />

    <TextView
        android:id="@+id/textView_episode_airdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AirDate" />
    
    <TextView
        android:id="@+id/textView_episode_ch_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel Num" />
    
    
</LinearLayout>