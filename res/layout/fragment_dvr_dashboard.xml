<org.mythtv.client.ui.widget.DashboardLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button android:id="@+id/dvr_btn_recordings"
        style="@style/DashboardButton"
        android:text="@string/btn_recordings"
        android:drawableTop="@drawable/dvr_btn_recordings" />
    <Button android:id="@+id/dvr_btn_upcoming"
        style="@style/DashboardButton"
        android:text="@string/btn_upcoming"
        android:drawableTop="@drawable/dvr_btn_upcoming" />
    <Button android:id="@+id/dvr_btn_guide"
        style="@style/DashboardButton"
        android:text="@string/btn_guide"
        android:drawableTop="@drawable/dvr_btn_guide" />

</org.mythtv.client.ui.widget.DashboardLayout>
