<org.mythtv.client.ui.widget.DashboardLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button android:id="@+id/dvr_btn_recordings"
        style="@style/DashboardButton"
        android:text="@string/btn_recordings"
        android:drawableTop="@drawable/dvr_btn_recordings"
        android:contentDescription="@string/btn_recordings_ally" />
    <Button android:id="@+id/dvr_btn_upcoming"
        style="@style/DashboardButton"
        android:text="@string/btn_upcoming"
        android:drawableTop="@drawable/dvr_btn_upcoming"
        android:contentDescription="@string/btn_upcoming_ally" />
    <Button android:id="@+id/dvr_btn_guide"
        style="@style/DashboardButton"
        android:text="@string/btn_guide"
        android:drawableTop="@drawable/dvr_btn_guide"
        android:contentDescription="@string/btn_guide_ally" />
    <Button android:id="@+id/dvr_btn_recording_rules"
        style="@style/DashboardButton"
        android:text="@string/btn_recording_rules"
        android:textColor="@color/body_text_disabled"
        android:drawableTop="@drawable/dvr_btn_recording_rules"
        android:contentDescription="@string/btn_recording_rules_ally" />
    
</org.mythtv.client.ui.widget.DashboardLayout>
