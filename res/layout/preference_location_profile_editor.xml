<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/TableLayoutLocationEditor"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="0,1" >

            <TextView
                android:id="@+id/preference_location_profile_text_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preference_location_profile_text_view_name" >
            </TextView>

            <EditText
                android:id="@+id/preference_location_profile_edit_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/preference_location_profile_edit_text_name_hint" >
            </EditText>

            <TextView
                android:id="@+id/preference_location_profile_text_view_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preference_location_profile_text_view_url" >
            </TextView>

            <EditText
                android:id="@+id/preference_location_profile_edit_text_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/preference_location_profile_edit_text_url_hint" >
            </EditText>

            <TableRow
                android:id="@+id/TableRow01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnPreferenceLocationProfileSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="@string/btn_save" >
                </Button>

                <Button
                    android:id="@+id/btnPreferenceLocationProfileCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="@string/btn_cancel" >
                </Button>
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>