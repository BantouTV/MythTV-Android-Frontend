<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">
    
    
    <TableRow android:layout_weight="50"
        android:weightSum="100">
    
	     <ImageButton
	        android:id="@+id/imageButton_mediactrl_rec"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@android:drawable/btn_star"
	        android:layout_weight="25" />
	
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_stop"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@android:drawable/btn_star"
	        android:layout_weight="25" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_pause"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@android:drawable/btn_star"
	        android:layout_weight="25" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_play"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@android:drawable/btn_star"
	        android:layout_weight="25" />
    
    </TableRow>
    
    
    <TableRow android:layout_weight="50"
        android:weightSum="100">
    
	     <ImageButton
	        android:id="@+id/imageButton_mediactrl_prev"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@android:drawable/btn_star"
	        android:layout_weight="25" />
	
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_rew"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@android:drawable/btn_star"
	        android:layout_weight="25" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_ff"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@android:drawable/btn_star"
	        android:layout_weight="25" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_next"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@android:drawable/btn_star"
	        android:layout_weight="25" />
    
    </TableRow>
    
    
    
</TableLayout>