<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
  	android:layout_height="wrap_content">
    
	<LinearLayout
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:orientation="vertical"
  		android:padding="5sp">

        <TextView 
            android:layout_width="fill_parent"
  			android:layout_height="match_parent"
  			android:text="About MythTV Android Frontend"
  			android:textSize="16sp"
  			android:textStyle="bold"
  			android:paddingBottom="4sp" />
        
    	<TextView
    	    android:layout_width="fill_parent"
    	    android:layout_height="match_parent"
    	    android:text="MythTV Android Frontend provides an Android Phone or Tablet access to content on a MythTV Master Backend.  Stream the recordings, see what is upcoming, or view the program guide.  Access all the content whether you are on your home network or out and about with just your phone or tablet's data connection."
    	    android:paddingBottom="2sp" />
    
    	<TextView
    	    android:layout_width="fill_parent"
    	    android:layout_height="match_parent"
    	    android:text="MythMote is fully integrated into MythTV Android Frontend.  Connect to any MythTV Frontends on the network and control them."
    	    android:paddingBottom="2sp" />

       	<TextView
    	    android:layout_width="fill_parent"
    	    android:layout_height="match_parent"
    	    android:text="MythTV Android Frontend is completely open source and is licensed under the GPLv3.  Visit our github repository to see the code, read our wiki article or send us issues and feedback."
    	    android:paddingBottom="2sp" />
        		
    	<TextView android:id="@+id/about_url1"
    	    android:layout_width="fill_parent"
    	    android:layout_height="match_parent"
    	    android:text="@string/about_url1"
    	    android:textColor="@color/actionbar_text"
    	    android:padding="2sp"
    	    android:layout_marginBottom="10sp" />
    		    	    
        <TextView 
            android:layout_width="fill_parent"
  			android:layout_height="match_parent"
  			android:text="About MythTV"
  			android:textSize="16sp"
  			android:textStyle="bold"
  			android:paddingBottom="4sp" />
        
    	<TextView
    	    android:layout_width="fill_parent"
    	    android:layout_height="match_parent"
    	    android:text="MythTV is a Free Open Source software digital video recorder (DVR) project distributed under the terms of the GNU GPL. It has been under heavy development since 2002, and now contains most features one would expect from a good DVR (and many new ones that you soon won&apos;t be able to live without)."
    	    android:padding="2sp" />
    
    	<TextView android:id="@+id/about_url2"
    	    android:layout_width="fill_parent"
    	    android:layout_height="match_parent"
    	    android:text="@string/about_url2"
    	    android:textColor="@color/actionbar_text"
    	    android:padding="2sp"
    	    android:layout_marginBottom="10sp" />
    		
        <TextView 
            android:layout_width="fill_parent"
  			android:layout_height="match_parent"
  			android:text="About the Artwork"
  			android:textSize="16sp"
  			android:textStyle="bold"
  			android:paddingBottom="4sp" />
        
    	<TextView
    	    android:layout_width="fill_parent"
    	    android:layout_height="match_parent"
    	    android:text="The images and icons were developed by Jay Purugganan.  Visit his website to see more of his great work."
    	    android:padding="2sp" />
    
    	<TextView android:id="@+id/about_url3"
    	    android:layout_width="fill_parent"
    	    android:layout_height="match_parent"
    	    android:text="@string/about_url3"
    	    android:textColor="@color/actionbar_text"
    	    android:padding="2sp" />
    	
   	</LinearLayout>

</ScrollView>
